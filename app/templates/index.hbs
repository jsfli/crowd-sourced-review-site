<div class="col-md-12">
  <h1>Restaurant Review</h1>
  <div class="tile col-md-8">
    {{#each model.restaurants as |restaurant|}}
      <div class="restaurant_tile">
        <h3 class="text-center">{{restaurant.name}}</h3>
        <div>
          <p><img src= {{restaurant.photo}} alt= {{restaurant.name}}></p>
        </div>
        <div>
          <p>Average Price: HKD {{restaurant.price}}</p>
          <p>{{restaurant-hot restaurant}}{{restaurant-cost restaurant}}</p>
          {{#link-to 'restaurantdetail' restaurant.id}}<button type="button" class="btn btn-primary">Details</button>{{/link-to}}
        </div>
      </div>
    {{/each}}
  </div>
  <div class="col-md-4">
    <h2>Selected Restaurants</h2>
  </div>
</div>
